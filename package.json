{
    "name": "modulux-backend",
    "version": "0.1.0",
    "description": "A headless CMS backend with dynamic schema creation, REST API, and AI capabilities",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bkschaefer/modulux-backend.git"
    },
    "bugs": {
        "url": "https://github.com/bkschaefer/modulux-backend/issues"
    },
    "homepage": "https://github.com/bkschaefer/modulux-backend#readme",
    "scripts": {
        "test": "jest --coverage",
        "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
        "start": "cross-env NODE_ENV=production bun dist/index.js",
        "start:node": "node dist/src/index.js",
        "format": "prettier ./src --write --no-semi --single-quote",
        "build": "bun build src/index.ts --outdir ./dist --target node --minify --splitting --format esm",
        "build:tsc": "tsc"
    },
    "keywords": [
        "headless-cms",
        "typescript",
        "express",
        "mongodb",
        "rest-api",
        "jwt",
        "s3",
        "ai"
    ],
    "author": "Benedikt Sch√§fer",
    "license": "GPL-3.0-only",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.729.0",
        "@aws-sdk/s3-request-presigner": "^3.729.0",
        "@exodus/schemasafe": "^1.3.0",
        "@types/uuid": "^10.0.0",
        "ai": "^4.1.5",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-validator": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.6.3",
        "multer": "^1.4.5-lts.1",
        "multer-s3": "^3.0.1",
        "nodemailer": "^6.9.15",
        "ollama-ai-provider": "^1.2.0",
        "sib-api-v3-sdk": "^8.5.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^10.0.0",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-validator": "^3.0.0",
        "@types/jest": "^29.5.13",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/multer-s3": "^3.0.3",
        "@types/nodemailer": "^6.4.16",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "cross-env": "^7.0.3",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "mongodb-memory-server": "^10.1.2",
        "nodemailer-mock": "^2.0.6",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2"
    },
    "lint-staged": {
        "*.{ts,js}": "prettier --write --no-semi --single-quote"
    }
}
